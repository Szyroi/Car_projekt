<Window x:Class="Car_projekt.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Car_projekt.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid>
            
        <StackPanel Grid.Column="0"  VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Username" />
        <TextBox Width="100"/>
        <Label Content="Passwort" />
        <TextBox />
        </StackPanel>
        </Grid>
        
        <Grid>
        <StackPanel Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
        <Button Content="Login" />
        <Button Content="Login" />
        </StackPanel>
            </Grid>
    </Grid>
</Window>
